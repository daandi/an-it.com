	%head
		%title AN-IT.com
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
	%body
		%section{:id => 'page'}
			%header{:id => "page_header"}
				=image_tag "AN-iT-Logo.png"
				%nav
					%ul
						%li=link_to 'Home', :controller => 'page', :action => 'home'
						%li=link_to 'Kontakt',  :controller => 'page', :action => 'kontakt'
			%section{:id => "main_section"}
				=yield
			%footer{:id => "page_footer"}
				%nav
					%ul
						%li=link_to 'Home', :controller => 'page', :action => 'home'
						%li=link_to 'Kontakt', :controller => 'page', :action => 'kontakt'
				%section{:id => "cr"}
